# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=enterprise_db
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000

# Redis (Optional in development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_REQUIRED=false  # Set to true to make Redis mandatory

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=debug           # Options: error, warn, info, debug
LOG_FORMAT=json           # Options: json, simple
LOG_COLORIZE=true         # Enable/disable colored logs (true/false)
LOG_SQL_QUERIES=true      # Log database queries (true/false)
LOG_HTTP_REQUESTS=true    # Log HTTP requests (true/false)
LOG_ERRORS_ONLY=false     # Log only errors (true/false)

# File Logging (Production)
LOG_FILE_ENABLED=false    # Enable file logging (true/false)
LOG_FILE_PATH=logs        # Directory for log files
LOG_FILE_MAX_SIZE=10m     # Max size per file
LOG_FILE_MAX_FILES=7      # Number of files to keep

# Email (for future implementation)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3001
SOCKET_ENABLED=true       # Enable/disable Socket.IO (true/false)

# Swagger
SWAGGER_ENABLED=true      # Enable/disable API documentation (true/false)

# Performance
COMPRESSION_ENABLED=true  # Enable response compression (true/false)

# Monitoring
HEALTH_CHECK_ENABLED=true # Enable health check endpoints (true/false)