# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devcycle
DB_USER=postgres
DB_PASSWORD=root
DB_LOGGING=false

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:8080
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,https://yourdomain.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password

# Optional: PgAdmin (for development)
PGADMIN_EMAIL=admin@devcycle.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Optional: Redis Commander (for development)
REDIS_COMMANDER_PORT=8081