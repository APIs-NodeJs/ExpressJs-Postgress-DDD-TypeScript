# Test Environment Configuration
NODE_ENV=test
PORT=3001
API_VERSION=v1
API_PREFIX=/api

# Test Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_SSL=false
DB_LOGGING=false

# Test Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_TTL=3600

# Test JWT
JWT_SECRET=test-jwt-secret-key-min-32-chars-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=test-refresh-token-secret-key-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d
JWT_ISSUER=myapp
JWT_AUDIENCE=myapp-users

# Test Email (use mailtrap or similar)
EMAIL_SERVICE=smtp
EMAIL_FROM=test@myapp.com
EMAIL_FROM_NAME=MyApp Test
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-mailtrap-user
SMTP_PASSWORD=your-mailtrap-password

# Test Frontend URL
FRONTEND_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3001

# Test Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3001
SOCKET_PORT=3002
SOCKET_PATH=/socket.io

# Test Rate Limiting (disabled for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true
ENABLE_RATE_LIMIT=false

# Test Security
BCRYPT_ROUNDS=4
PASSWORD_MIN_LENGTH=8

# Test Logging
LOG_LEVEL=error
LOG_FORMAT=json
LOG_DIR=logs/test

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_SOCKET_IO=false
ENABLE_CORS=true
ENABLE_COMPRESSION=false