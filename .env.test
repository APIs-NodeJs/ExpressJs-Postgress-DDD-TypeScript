# Test Environment Configuration

NODE_ENV=test
PORT=3001

# Test Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devcycle_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_LOGGING=false

# Test JWT Secrets
JWT_ACCESS_SECRET=test-access-secret-at-least-32-characters-long-for-testing
JWT_REFRESH_SECRET=test-refresh-secret-at-least-32-characters-long-for-testing

# CORS for testing
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:8080

# Redis for testing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Observability
ELASTICSEARCH_URL=http://localhost:9200
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_PORT=9090
LOG_LEVEL=info

# Performance
DB_POOL_MAX=20
DB_POOL_MIN=5
REDIS_MAX_MEMORY=2gb
ENABLE_QUERY_CACHE=true

# Scaling
INSTANCE_ID=api-1
CLUSTER_MODE=false

# Monitoring
GRAFANA_PASSWORD=admin
ENABLE_METRICS=true
ENABLE_TRACING=true